<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <title>BTN Store List</title>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
   <link rel="stylesheet" href="../../public/stylesheets/style.css">
   {{!-- nav bar --}}
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
               <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/toy/">Home</a>
               </li>
            </ul>
            <form action="/custumer/search" method="post" class="d-flex">
               <input class="form-control" type="search" placeholder="Search by toy's name" name="name_toy" id=""
                  required>
               <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
         </div>
      </div>
   </nav>
   <div class="main-wrapper">
      <div class="container">
         <div class="main-title">
            <h1>ATN Store List</h1>
         </div>
         <div class="item-list">
            {{#each toy}}
            <div class="item">
               <div class="item-img">
                  <a href="/custumer/detail/{{ _id }}">
                     <img src="{{image}}">
                  </a>
               </div>
               <div class="item-detail">
                  <a class="item-name">{{ name_toy }}</a>
                  <div class="item-price">
                     <span class="new-price">{{price}}$</span>
                  </div>
               </div>
            </div>
            {{/each}}
         </div>
      </div>
   </div>
</body>