<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="../../public/stylesheets/style.css">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
   <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
         aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
         <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
               <a class="nav-link active" aria-current="page" href="/toy/">Home</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" href="/toy/add">Add</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" href="/custumer/" tabindex="-1">Custumer view</a>
            </li>
         </ul>
         <form action="/toy/search" method="post" class="d-flex">
            <input class="form-control" type="search" placeholder="Search by toy's name" name="name_toy" id="" required>
            <button class="btn btn-outline-success" type="submit">Search</button>
         </form>
      </div>
   </div>
</nav>
<div class="container mt-3">
   <table class="table">
      <tbody>
         <thead>
            <tr>
               <th colspan="4" class="h1 text-uppercase text-success">
                  ATN store
               </th>
            </tr>
         </thead>
         <thead class="table-dark">
            <tr>
               <th>Name</th>
               <th>Price</th>
               <th>Category</th>
               <th>Image</th>
               <th>Menu</th>
            </tr>
         </thead>
         {{#each toy }}
         <tr>
            <td>{{ name_toy }}</td>
            <td>{{ price }}</td>
            <td>{{ category}}</td>
            <td>
               <a href="/toy/detail/{{ _id }}">
                  <img src="{{ image }}" style="width: 150px;height: 150px;" >
               </a>
            </td>
            <td>
               <a class="btn btn-warning" href="/toy/edit/{{ _id }}">Edit</a>
               <a class="btn btn-danger" href="/toy/delete/{{ _id }}"
                  onclick="return confirm('Are you sure to delete this toy ?');">Delete</a>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>